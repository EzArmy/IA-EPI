
<%- include('./partials/header', {
    gestorInfo: gestorInfo,
    pageName: 'Editar Gestor'
}) %>


<div class="container grid grid-cols-5">

    <div class="col-start-1 col-span-1">
        <%- include('./partials/menu', {gestorInfo: gestorInfo}) %>
    </div>     

    
    <div class="rounded-lg col-start-2 col-span-4 sm:col-start-3 sm:col-span-2 mr-4 sm:mr-0">

        <div id="loader"></div>

        <h1 class="text-2xl font-bold text-gray-800 mb-4 my-8">Editar Perfil do Gestor</h1>

        <div class="text-red-500 mb-4"><%= error %></div>
        <form action="/home/perfilGestor/edit/gestorUpdate" method="post" enctype="multipart/form-data">

            
            <input required placeholder="Nome" type="text" name="gestorNome" value="<%= gestorInfo.nome %>"
                class="w-full bg-white border border-gray-300 rounded-md px-4 py-2 mb-4 focus:outline-none overflow-hidden">

            
            <input required placeholder="Email" type="email" name="gestorEmail" value="<%= gestorInfo.email %>"
                class="w-full bg-white border border-gray-300 rounded-md px-4 py-2 mb-4 focus:outline-none">

            
            <input required placeholder="Senha" type="password" name="gestorSenha" value="<%= gestorInfo.senha %>"
                class="w-full bg-white border border-gray-300 rounded-md px-4 py-2 mb-4 focus:outline-none">

            
            <input placeholder="Foto de Perfil" type="file" name="gestorFoto"
                class="w-full bg-white border border-gray-300 rounded-md px-4 py-2 mb-4 focus:outline-none">

            
            <select required name="gestorSetor"
                class="w-full bg-white border border-gray-300 rounded-md px-4 py-2 mb-4 focus:outline-none">
                <option selected disabled>Escolha um Setor</option>
                <% listaSetores.forEach((listaSetores)=>{ %>
                <option value="<%= listaSetores.id %>"><%= listaSetores.descricao %></option>
                <% }); %>
            </select>

            
            <select required name="gestorCargo"
                class="w-full bg-white border border-gray-300 rounded-md px-4 py-2 mb-4 focus:outline-none">
                <option selected disabled>Escolha um Cargo</option>
                <% listaCargos.forEach((listaCargos)=>{ %>
                <option value="<%= listaCargos.id %>"><%= listaCargos.nome %></option>
                <% }); %>
            </select>

            
            <input type="submit" value="Atualizar"
                class="w-full bgcolormain bg-opacity-50 hover text-white font-semibold rounded-lg shadow-lg px-4 py-2 focus:outline-none">
        </form>
    </div>

</div>
</body>

</html>