<%- include('./partials/header', { gestorInfo: gestorInfo, pageName: 'Colaborador' }) %>

<div id="loader"></div>

<div class="flex grid grid-cols-7">    

    <div class="col-start-1 col-end-1">
        <%- include('./partials/menu') %>
    </div>

    

    <div class="col-start-2 col-span-6 mx-2">

        <h1 class="text-2xl font-bold text-gray-800 my-6">Colaborador</h1>

        <% listColabInfo.forEach((listColabInfo)=>{ %>
            <div class="mb-4 flex justify-center">
                <% if(listColabInfo.foto==null){ %>
                    <img src="/img/profile/default.jpg" alt="imagem de <%= listColabInfo.nome %>" class="rounded-full" style="width: 150px; height: 150px;">
                <% } else { %>
                    <img src="/uploads/<%= gestorInfo.id %>/colaboradores/<%= listColabInfo.id %>/<%= listColabInfo.foto %>" alt="Perfil <%= listColabInfo.nome %>" class="w-32 h-32 rounded-full">
                <% } %>
            </div>
        <% }); %>

        <% listColabInfo.forEach((listColabInfo)=>{ %>
            <h4 class="text-3xl font-semibold text-gray-700 mb-4">
                <%= listColabInfo.nome %>
            </h4>
        <% }); %>

        <% listColabInfo.forEach((listColabInfo)=>{ %>
            <a href="editColab" class="text-blue-500 hover:underline">
                Editar perfil de <%= listColabInfo.nome %>
            </a>
        <% }); %>

        <button onclick="showModal()" class="bg-red-500 hover:bg-red-300 text-white font-semibold rounded-md px-4 py-2 mt-4 w-full">
            DELETAR COLABORADOR
        </button>
    </div>
</div>
 
        <div id="delModal" class="w-3/5 h-1/2 rounded-lg border-gray-800 border-2 bg-opacity-50 rounded-lg shadow-lg">

            <div class="flex flex-col w-full bg-gray-300 rounded">
    
                <div class="flex flex-row justify-end px-5">
                    <button onclick="closeModal()">
                        <img class="h-8 w-8" src="/img/icons/x-lg.svg" alt="close icon">
                    </button>
                </div>
    
                <div class="flex flex-col h-full justify-center items-center">
                    <h1 class="text-2xl md:text-4xl ml-4 font-bold">DELETAR COLABORADOR?</h1>
                    <p class="sm:text-xl ml-4 mb-4">Quer mesmo deletar o perfil do colaborador e todas as informações armazenadas?</p>
                </div>
    
                <div class="flex flex-col px-5">
                    <p class="">Digite os números gerados:</p>
                    <p id="randomNum">
                        <!-- Gerando 6 números aleatórios -->
                    </p>
                    <input placeholder="Digite os número acima para poder prosseguir" type="text" id="checkInput" oninput="numCheck()">
                </div>
    
                <div class="flex flex-row h-full items-center justify-around">
                    <form action="colabDelete" method="post">
                        <button disabled='true' id="delBtn" class="font-bold text-white">
                            Deletar Colaborador!
                        </button>
                    </form>
    
                    <button onclick="closeModal()" class="font-bold ">
                        Não deletar Colaborador!
                    </button>
                </div>
            </div>    
        </div>
    
</body>

</html>