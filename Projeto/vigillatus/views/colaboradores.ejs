<%- include('./partials/header', { gestorInfo: gestorInfo, pageName: 'Lista de colaboradores' }) %>

    <div id="loader"></div>

    <div class="container grid grid-cols-5">

        <div class="col-start-1 col-span-1 sm:w-28">
            <%- include('./partials/menu') %>
        </div>


        <div class="rounded-lg col-start-3 col-span-4 sm:col-start-3 sm:col-span-3  mr-4">


            <h1 class="text-2xl font-bold text-gray-800 my-6">Colaboradores</h1>

            <div class="">

                <!-- Barra de pesquisa para colaboradores -->
                <form action="/home/colaboradores/search" method="post" class="sm:justify-center">

                    <div class="flex flex-row mb-5">
                        <input placeholder="Buscar colaborador" type="text" name="searchColab" class="rounded-tr-none rounded-br-none w-full bg-white border border-gray-300 rounded-md px-4 py-2 focus:outline-none">

                        <button type="submit" class="bgcolormain hover text-white font-semibold rounded-md px-4 py-2 rounded-tl-none rounded-bl-none">PESQUISAR</button>
                    </div>

                </form>


                <a href="/home/addColab" class="bgcolormain hover text-white font-semibold rounded-md px-4 py-2 my-2">ADICIONAR</a>
            </div>

            <div class="grid grid-cols-2 max-sm:grid-cols-1 gap-1 gap-y-2 mt-5">

                <% listColaborador.forEach((listColaborador)=>{ %>
                    <div class="border-2 bg-white p-2 bg-opacity-50 rounded-lg shadow-lg col-span-1">
                        <div class="">
                            <% if(listColaborador.foto==null){ %>
                                <img class="rounded-full" src="/img/profile/default.jpg"
                                    style="width: 100px; height: 100px;" alt="">
                                <% } else { %>
                                    <img class="rounded-full"
                                        src="/uploads/<%= gestorInfo.id %>/colaboradores/<%= listColaborador.id %>/<%= listColaborador.foto %>"
                                        alt="" style="width: 100px; height: 100px;">
                                    <% } %>
                                        <p class="ml-4 text-gray-900 font-semibold">
                                            <%= listColaborador.nome %>
                                        </p>
                        </div>
                        <div class="my-auto mx-4 text-gray-800">
                            <!-- Criando rota dinâmica para a página de detalhes do colaborador -->
                            <a href="/home/colaboradores/<%= listColaborador.id %>/"
                                class="text-blue-500 hover:underline">ver info</a>
                        </div>
                    </div>
                    <% }); %>

            </div>
        </div>
    </div>
    </body>

    </html>