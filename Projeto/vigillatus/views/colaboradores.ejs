<%- include('./partials/header', {
    gestorInfo: gestorInfo,
    pageName: 'Lista de colaboradores'
}) %>  
    
    <div id="loader"></div>

    <div class="container grid grid-cols-5">     

        <div class="col-start-1 col-span-1 sm:w-28">
            <%- include('./partials/menu') %>
        </div>        
    

        <div class="rounded-lg col-start-2 col-span-4 sm:col-start-3 sm:col-span-2 mr-4">

            
            <h1 class="text-2xl font-bold text-gray-800 my-6">Colaboradores</h1>
            

            <div class="">

                <div class="flex justify-center">
                <!-- Barra de pesquisa para colaboradores -->
                <form action="/home/colaboradores/search" method="post" class="flex-wrap">

                    <input placeholder="Buscar colaborador" type="text" name="searchColab" id="" class="bg-white border border-gray-300 rounded-md px-4 py-2 mb-4 focus:outline-none w-full sm:w-80">

                    <button type="submit" class="bgcolormain hover text-white font-semibold rounded-md px-4 py-2">PESQUISAR</button>  

                    <button class="bgcolormain hover text-white font-semibold rounded-md px-4 py-2">
                        <a href="/home/addColab">ADICIONAR</a>
                    </button> 
                    
                </form>  
                           
                </div>


                <!-- apresentando pesquisa -->                

                <div class="sm:flex sm:flex-wrap mt-4 justify-center">
                    <% listColaborador.forEach((listColaborador)=>{ %>
                        <div class="bg-white p-2 bg-opacity-50 rounded-lg shadow-lg sm:w-72">
                            <div class="">
                                <% if(listColaborador.foto==null){ %>
                                    <img class="rounded-full" src="/img/profile/default.jpg" style="width: 100px; height: 100px;" alt="">
                                <% } else { %>
                                    <img class="rounded-full" src="/uploads/<%= gestorInfo.id %>/colaboradores/<%= listColaborador.id %>/<%= listColaborador.foto %>" alt="" style="width: 100px; height: 100px;">
                                <% } %>
                                <p class="text-gray-900 font-semibold">
                                    <%= listColaborador.nome %>
                                </p>                                            
                            </div>    
                            <div class="my-auto text-gray-800">
                                <!-- Criando rota dinâmica para a página de detalhes do colaborador -->
                                <a href="/home/colaboradores/<%= listColaborador.id %>/" class="text-blue-500 hover:underline">ver info</a>
                            </div>                        
                        </div>
                    <% }); %>
                </div>
            </div>
    </div>
    </body>

    </html>
